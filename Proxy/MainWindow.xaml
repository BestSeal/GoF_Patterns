<Window x:Class="Proxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proxy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border BorderThickness="2" BorderBrush="Aqua">
    <Canvas x:Name="MainCanvas">
        <Border x:Name="ImageBorder" BorderThickness="5">
            <Image x:Name="ProxyImage" Source="Img/placeholder.png" 
                   MouseLeftButtonDown="ProxyImage_OnMouseLeftButtonDown"
                   MouseMove="ProxyImage_OnMouseMove"
                   MouseRightButtonDown="ProxyImage_OnMouseRightButtonDown"/>
        </Border>
    </Canvas>
    </Border>
</Window>